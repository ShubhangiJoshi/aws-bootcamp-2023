{
    "AlarmActions": [
        "arn:aws:sns:ap-south-1:825740627904:billing-alert"
    ],
    "ComparisonOperator": "GreaterThanThreshold",
    "EvaluationPeriods": 1,
    "Threshold": 1,
    "TreatMissingData": "breaching",
    "ActionsEnabled": true,
    "AlarmDescription": "This alarm would be triggered if the daily estimated charges exceeds1$",
    "AlarmName": "DailyEstimationCharges",
    "Metrics": [
        {
            "Id": "m1",
            "MetricStat": {
                "Metric": {
                    "MetricName": "ConnectionsFailed",
                    "Namespace": "AWS/Billing",
                    "Dimensions": [{
                        "Name": "Currency",
                        "Value":"USD"

                    }]
                },
                "Period": 86400,
                "Stat": "Maximum"
            },
             "ReturnData": false
        },        
        {
            "Id": "e1",
            "Expression": "IF (RATE(m1)>0,RATE(m1)*86400,0)",
            "Label": "DailyEstimationCharges",
            "ReturnData": true
        }
    ]
}
